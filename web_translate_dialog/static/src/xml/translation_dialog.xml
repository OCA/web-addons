<?xml version="1.0" encoding="utf-8" ?>
<templates>
    <div t-extend="TranslationDialog">
        <t t-jquery="div[t-foreach='widget.data'][t-as='term']" t-operation="before">
            <div class="row">
                <div class="col-lg-3">
                    <div class="separator horizontal"><b>Field</b></div>
                </div>
                <div class="col-lg-9">
                    <div class="separator horizontal"><b><t
                                t-esc="widget.languages[0][1]"
                            /></b></div>
                </div>
            </div>
        </t>
        <t t-jquery="div[t-foreach='widget.data'][t-as='term']" t-operation="prepend">
            <t
                t-set="field"
                t-value="widget.view.controlPanelProps.fields[term.name]"
            />
        </t>
        <t t-jquery="t[t-esc='term.langName']" t-operation="replace">
            <t t-esc="field.string" />
        </t>
    </div>
</templates>
